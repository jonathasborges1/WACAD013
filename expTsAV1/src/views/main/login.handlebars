<div class="col-lg-12">
   <div class="page-header">
      <h1 id="tables">Acesso de Usuario</h1>
   </div>
   <div class="bs-component">
      <form action="/login" method="post">

         <br>
            <div class="form-group-4">
               <label for="name">Login</label>
               <input type="text" class="form-control" id="username" name="username" placeholder="Nome" value="{{username}}">
            </div>

            {{#if senhaIncorreta}}
               <div class="invalid-feedback" style="display:block">
                  Usuario ou senha incorretos
               </div>
             {{/if}}
            <br/>
            <div class="form-group-4">
               <label for="sigla">Senha</label>
               <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha" value="{{senha}}">
            </div>
            <div class="invalid-feedback" style="display:block">
               {{showErrors errors 'senha'}}
            </div>
            <br/>

            <div class="form-group-4">
               <input type="hidden" class="form-control" name="_csrf"  value="{{csrf}}">
            </div>

            <button type="submit" class="btn btn-primary">Login</button>
         </fieldset>

      </form>
   </div>
</div>
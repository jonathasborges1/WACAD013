<div class="col-lg-12">
   <div class="page-header">
      <h1 id="tables">Adicional Departamentos</h1>
   </div>
   <div class="bs-component">
      <form action="/departamento/create" method="post">

         <fieldset>
            <div class="form-group">
               <label for="name">Nome</label>
               <input type="text" class="form-control" id="name" name="name" placeholder="Nome" value="{{departamento.name}}">
            </div>
            <div class="invalid-feedback" style="display:block">
               {{showErrors errors 'name'}}
            </div>

            <div class="form-group">
               <label for="sigla">Sigla</label>
               <input type="text" class="form-control" id="sigla" name="sigla" placeholder="Sigla" value="{{departamento.sigla}}">
            </div>
            <div class="invalid-feedback" style="display:block">
               {{showErrors errors 'sigla'}}
            </div>

            <button type="submit" class="btn btn-primary">Criar Departamento</button>
         </fieldset>

      </form>
   </div>
</div>